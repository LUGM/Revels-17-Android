<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.mitrevels.revels">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.Revels"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activities.EventActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DevelopersActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.SecondaryActivityTheme" />
        <activity
            android:name=".activities.AboutUsActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CategoryActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.SecondaryActivityTheme" />

        <activity android:name=".activities.ProshowActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.SecondaryActivityTheme"/>

        <receiver
            android:name=".receivers.NotificationReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="@string/notification_receiver" />

    </application>

</manifest>