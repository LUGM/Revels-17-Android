<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_coordinator_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/event_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/event_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:statusBarScrim="@android:color/transparent"
            app:collapsedTitleGravity="left|start"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@style/ExpandedAppBar"
            app:expandedTitleMargin="@dimen/padding_default"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/event_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:background="?attr/colorPrimary"
                android:gravity="center">

                <ImageView
                    android:id="@+id/event_cat_logo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/tt_aero"
                    android:elevation="5dp"
                    android:background="@drawable/circular_bg"
                    android:layout_marginTop="@dimen/padding_3x"
                    android:layout_marginBottom="@dimen/padding_4x"/>

            </LinearLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/event_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_date"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:text="@string/date"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/event_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    tools:text="Event Date"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:text="@string/time"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/event_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    tools:text="Event Time"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_venue"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:text="@string/venue"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/event_venue_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    tools:text="Event Venue"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_team"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:text="@string/team_of"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/event_team_of_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    tools:text="Event Date"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_categories"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/event_category_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typography_body"
                    tools:text="Event Category"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_contact"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/typography_body"
                        android:text="@string/contact"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/event_contact_number_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/typography_body"
                            tools:text="Contact"
                            android:textColor="@color/light_blue"/>

                        <TextView
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/event_contact_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/typography_body"
                            tools:text="(Contact Name)"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_default"
                android:background="@android:drawable/divider_horizontal_bright"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_half">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.54"
                    android:src="@drawable/ic_description"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/typography_body"
                        android:text="@string/description"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/padding_half"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/event_description_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/typography_body"
                        tools:text="Event Description"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/event_fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:padding="@dimen/padding_default"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        fab:menu_labels_margin="24dp"
        fab:menu_backgroundColor="#DDEEEEEE"
        fab:menu_shadowColor="#44000000"
        fab:menu_animationDelayPerItem="40"
        fab:menu_colorNormal="@color/light_blue"
        fab:menu_colorPressed="@color/light_blue_medium"
        fab:menu_colorRipple="@color/light_blue_dark">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fav_selected"
            fab:fab_label="@string/add_to_favourites"
            app:fab_colorNormal="@color/red"
            app:fab_colorPressed="@color/red_medium"
            app:fab_colorRipple="@color/red_dark"
            style="@style/MiniFabStyle"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rate"
            fab:fab_label="@string/rate_event"
            app:fab_colorNormal="@color/amber"
            app:fab_colorPressed="@color/amber_medium"
            app:fab_colorRipple="@color/amber_dark"
            style="@style/MiniFabStyle"/>

    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>