<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/revels_grey"
    tools:context="in.mitrevels.mitrevels.activities.SplashActivity">

    <ImageView
        android:id="@+id/splash_revels_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/revels_icon"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/splash_revels_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/revels_text"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:layout_marginTop="@dimen/padding_2x"
        style="?android:attr/progressBarStyle"
        android:layout_alignParentBottom="true"
        android:id="@+id/splash_progress_bar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminateTint="@color/amber"
        android:indeterminateTintMode="src_in"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
